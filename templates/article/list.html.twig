{% endblock %}
{% block body %}


<a href="{{ path('add2') }}" class="btn btn-primary ">Add article</a><br><br>
<a href="{{ path('users_data_download') }}" class="btn btn-primary ">Generer PDF</a>
<a href="{{ path('list_archive') }}" class="btn btn-primary ">List archive</a>

<h4>List article</h4>

{% for l in  tabarticle %}
    <td><img src="{{ asset('uploads/articles/' ~ l.image ) }}" alt="" width="200" height="200"></td>
    id: {{ l.id }}
    name: {{ l.nom }}
    description: {{ l.description }}
     prix: {{ l.prix }}
    <a href="{{ path('articledetail',{'id':l.id}) }}"class="btn btn-primary ">See more</a>
    <a href="{{ path('update',{'id':l.id}) }}"class="btn btn-primary ">Update</a>

<a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Delete</a>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
